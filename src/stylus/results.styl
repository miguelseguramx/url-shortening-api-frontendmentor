.url-results
  margin 30px 0
  position relative

.url-result
  background-color white
  border-radius 5px
  margin-bottom 30px
  .origin-url
    padding 15px
    margin 0 0 15px
    border-bottom 1px solid #eaeaea
  .result
    padding 0 15px 15px
  .result-url
    padding-bottom 15px
    color var(--cyan)

  @media(min-width: 900px)
    display grid
    grid-template-columns 2fr 1.2fr
    grid-template-rows 1fr
    padding 20px
    .result-url,
    .origin-url,
    .result
      margin 0
      padding 0
      border none
      align-self center
    .origin-url
      padding-right 30px
    .result
      display flex
      justify-content space-between
    .u-button--square
      margin 0
      width fit-content
      padding 10px 30px